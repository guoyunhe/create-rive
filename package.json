{
  "name": "create-rive",
  "version": "3.6.7",
  "description": "Effortless React/Node.js library development experience",
  "keywords": [
    "component",
    "document",
    "library",
    "react",
    "typescript",
    "vite"
  ],
  "homepage": "https://github.com/guoyunhe/create-rive#readme",
  "bugs": {
    "url": "https://github.com/guoyunhe/create-rive/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guoyunhe/create-rive.git"
  },
  "funding": "https://github.com/sponsors/guoyunhe",
  "license": "MIT",
  "author": "Guo Yunhe",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "dist/create-rive.js",
  "files": [
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "dist",
    "locales",
    "templates"
  ],
  "scripts": {
    "build": "rive build",
    "build:watch": "rive build --watch",
    "ci:eslint": "eslint -f json src -o ./.ci/eslint.json",
    "init": "tsx src/create-rive.ts",
    "lint": "eslint .",
    "lint:fix": "prettier --write . && eslint --fix .",
    "prepare": "husky",
    "start": "rive start",
    "test": "rive test",
    "test:ui": "rive test --ui",
    "test:watch": "rive test --watch"
  },
  "lint-staged": {
    "*.{cjs,cts,js,jsx,mjs,mts,ts,tsx,vue}": "eslint --fix",
    "*.{cjs,css,cts,html,js,json,jsx,less,md,mjs,mts,scss,ts,tsx,vue,yaml,yml}": "prettier --write"
  },
  "prettier": "prettier-config-ali",
  "dependencies": {
    "@clack/prompts": "^0.10.1",
    "chalk": "^5.4.1",
    "change-case": "^5.4.4",
    "commander": "^12.1.0",
    "deepmerge": "^4.3.1",
    "f2elint": "^5.0.5",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.0",
    "i18n": "^0.15.1",
    "init-roll": "^1.4.0",
    "package-json-from-git": "^1.2.2",
    "prettier-config-ali": "^1.3.2",
    "simple-git": "^3.27.0"
  },
  "devDependencies": {
    "@mdx-js/react": "^3.1.0",
    "@types/fs-extra": "^11.0.4",
    "@types/i18n": "^0.13.12",
    "@types/node": "^20.17.30",
    "@types/react": "^18.3.20",
    "@types/react-dom": "^18.3.6",
    "eslint-config-ali": "^16.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "prettier-config-ali": "^1.3.2",
    "react": "^18.3.1",
    "react-doc-ui": "^2.3.0",
    "react-dom": "^18.3.1",
    "rive": "^3.0.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  },
  "rive": {
    "template": "cli",
    "doc": {
      "basename": "/create-rive/"
    }
  }
}
