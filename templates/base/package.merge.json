{
  <% if (esmOnly) { %>
  "type": "module",
  "main": "dist/index.js",
  <% } else { %>
  "main": "dist/cjs/index.js",
  "module": "dist/index.js",
  <% } %>
  "types": "dist/index.d.ts",
  "files": ["dist", "CHANGELOG.md", "LICENSE", "README.md"],
  "scripts": {
    "start": "rive start",
    "build": "rive build",
    "build:watch": "rive build --watch",
    "test": "rive test",
    "test:watch": "rive test --watch",
    "test:ui": "rive test --ui",
    "lint": "rive lint",
    "lint:fix": "rive lint --fix"
  },
  "devDependencies": {
    "@mdx-js/react": "^3.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-doc-ui": "^2.0.0",
    "rive": "^2.0.0",
    "typescript": "^5.0.0"
  },
  "eslintConfig": {
    "extends": "eslint-config-rive"
  },
  "prettier": "prettier-config-rive",
  "rive": {
    "template": "<%= template %>",
    "doc": {
      "basename": "/<%= basename %>/"
    }
  }
}
